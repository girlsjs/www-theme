<article class="post">
	<div class="content">

		<% if (item.image) { %>
			<img class="post-image" src="<%- config.root%>images/posts/<%- item.image %>" />
		<% } %>

		<h1 class="post-header"><%- item.title %></h1>

		<div class="post-date">
      <%= item.date.format(config.date_format) %>
		</div>

    <%- item.content %>
		<div class="clearfix"></div>

    <!-- Gallery -->
    <% if (item.photos && item.photos.length){ %>
        <%- partial('gallery') %>
    <% } %>
	</div>
</article>
